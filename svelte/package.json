{
  "name": "svelte",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run start",
    "prod": "npm run check && npm run build && npm run preview",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "npm run concurrently \"npm:check:eslint -- --fix\" \"npm:check:stylelint -- --fix\" \"npm:check:prettier -- --write\"",
    "check": "npm run concurrently npm:check:*",
    "check:type": "svelte-check --tsconfig ./tsconfig.json",
    "check:prettier": "prettier . --plugin-search-dir . --check",
    "check:eslint": "eslint \"**/*.{js,cjs,mjs,ts,cts,mts}\"",
    "check:stylelint": "stylelint \"**/*.{css,svg,vue}\"",
    "concurrently": "concurrently --prefix-colors auto"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@sveltejs/vite-plugin-svelte": "^2.0.4",
    "@tsconfig/svelte": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-sort-keys-custom-order": "^1.0.5",
    "eslint-plugin-svelte": "^2.31.1",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-svelte": "^2.10.1",
    "stylelint": "^15.9.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.2.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "svelte": "^3.58.0",
    "svelte-check": "^3.3.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  }
}
